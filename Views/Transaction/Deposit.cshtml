@model TransactionViewModel
<div class="row">
    <div class="col l6 offset-l3">
        <h4>Deposit to account</h4>
    </div>
</div>
<a asp-controller="Account" asp-action="ShowAccountInfo" asp-route-id="@Model.ToAccount">Go back</a>
<form asp-controller="Transaction" asp-action="Deposit" method="post">
    <div class="row">
            <input asp-for="ToAccount" type="hidden">
    </div>
    <div class="row">
        <div class="col s6 l6 m6 offset-l3">
            <label asp-for="Amount">Enter the Amount</label>
            <input type="text" asp-for="@Model.Amount" id="Amount">
            <div class="validation_text">
                <span asp-validation-for="@Model.Amount"></span>
                <div asp-validation-summary="All">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col l4 offset-l4">
            <button class="waves-effect waves-light btn">button</button>
        </div>
    </div>
</form>
